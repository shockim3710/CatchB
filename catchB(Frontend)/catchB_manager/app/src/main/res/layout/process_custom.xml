<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="130dp"
                android:layout_height="100dp"
                android:layout_marginRight="10dp"
                android:src="@mipmap/ic_launcher"/>

            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="title"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/text_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="content"
                    android:textSize="17sp" />
                <TextView
                    android:id="@+id/text_hashtag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="hashtag"
                    android:textSize="17sp" />


                <TextView
                    android:id="@+id/text_credit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="credit"
                    android:textSize="17sp" />



            </LinearLayout>


            <LinearLayout
                android:layout_width="125dp"
                android:layout_height="99dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_equal"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="0dp"
                    android:gravity="center"
                    android:onClick="EqualClick"
                    android:text="@string/equalbutton"
                    android:backgroundTint="#0F2BC6"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/btn_unequal"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="0dp"
                    android:backgroundTint="#DA1C1C"
                    android:gravity="center"
                    android:onClick="UnequalClick"
                    android:text="@string/unequalbutton"
                    android:textSize="15sp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>